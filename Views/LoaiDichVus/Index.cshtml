@model IEnumerable<LV_DuLichDienTu.Models.LoaiDichVu>

@{
    ViewData["Title"] = "Index";
}

<div class="">
    <div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_content">
        <div> 
          <h2>
            BẢNG LOẠI DỊCH VỤ <small><a asp-action="Create"> Thêm mới</a></small>
        </h2>
        </div>
        
        <table id="datatable" class="table table-striped table-bordered ">
          <thead>
            <tr>
              <th class="style-table">
                @Html.DisplayNameFor(model => model.ldv_ten)
              </th>
              <th>Tùy chọn</th>
            </tr>
          </thead>
          <tbody>
            @foreach (var item in Model)
            {
              <tr>
                <td>
                  @Html.DisplayFor(modelItem => item.ldv_ten)
                </td>
                <td>
                  <a asp-action="Details" asp-route-id="@item.ldv_id" class="btn btn-success btn-xs"><i
                    class="fa fa-search"></i> Xem chi tiết</a>|
                  <a asp-action="Edit" asp-route-id="@item.ldv_id" class="btn btn-primary btn-xs"><i
                    class="fa fa-pencil"></i> Sửa </a>|
                </td>
              </tr>
            }
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
</div>