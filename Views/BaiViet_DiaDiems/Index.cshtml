                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.bvdd_tieude)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.bvdd_noidung)
                                    </td>
                                    <td>
