                        {
                            <p>Đã đóng cửa</p>
                        }
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaDiem_DuLich.dddl_ten)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NhanVien.nv_hoten)
                </td>
