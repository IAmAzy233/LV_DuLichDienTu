@model IEnumerable<LV_DuLichDienTu.Models.BaiViet_DiaDiem>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.bvdd_tieude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bvdd_noidung)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bvdd_tinhtrang)
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.dddl_id) *@
