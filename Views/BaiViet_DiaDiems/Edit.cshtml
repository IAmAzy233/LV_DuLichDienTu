@model LV_DuLichDienTu.Models.BaiViet_DiaDiem

@{
    ViewData["Title"] = "Edit";
}





<div class="">
    <div class="row">
        <div class="col-md-10 center-margin">
            <div class="x_panel">
                <div class="x_title">
                    <h2>CHỈNH SỬA BÀI VIẾT VỀ ĐỊA ĐIỂM </h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br>
                    <form asp-action="Edit" id="demo-form2" data-parsley-validate="" class="form-horizontal form-label-left" novalidate="">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="bvdd_id" />

                        <div class="form-group">
                            <div class="control-label col-md-3 col-sm-3 col-xs-12">
                                <label asp-for="bvdd_tieude"></label>
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input asp-for="bvdd_tieude" class="form-control" />
                                <span asp-validation-for="bvdd_tieude" class="text-danger"></span>
                            </div>
                        </div>

                        

                        <div class="form-group">
                            <div class="control-label col-md-3 col-sm-3 col-xs-12">
                                <label asp-for="bvdd_tinhtrang"></label>
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <select class="form-control col-md-7 col-xs-12" asp-for="bvdd_tinhtrang">
                                    @{
                                        if(@ViewBag.ReturnMA == true)
                                        {
                                            <option value=true>Đang hoạt động</option>
                                            <option value=false>Đã đóng cửa / đang bảo trì</option>
                                        }
                                        else
                                        {
                                            <option value=false>Đã đóng cửa / đang bảo trì</option>
                                            <option value=true>Đang hoạt động</option>
                                        }
                                    }
                                    
                                </select>
                            </div>
                        </div>  

                        <div class="form-group">
                            <div class="control-label col-md-3 col-sm-3 col-xs-12">
                                <label asp-for="dddl_id">Tên địa điểm</label>
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <select asp-for="dddl_id" asp-items="ViewBag.select_Ten_DD " class="form-control col-md-7 col-xs-12"></select>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="control-label col-md-3 col-sm-3 col-xs-12">
                                <label asp-for="nv_id">Tên nhân viên</label>
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <select asp-for="nv_id" asp-items="ViewBag.select_Hoten_NV  " class="form-control col-md-7 col-xs-12"></select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="control-label col-md-3 col-sm-3 col-xs-12">
                                <label asp-for="bvdd_noidung"></label>
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <textarea id="mota" asp-for="bvdd_noidung" class="form-control" ></textarea>
                                <span asp-validation-for="bvdd_noidung" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="ln_solid"></div>
                        <div class="form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                <button asp-action="Index" class="btn btn-success"> Quay lại</button>
                                <input type="submit" value="Lưu" class="btn btn-primary" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
