                        class="form-horizontal form-label-left">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        @* Trường tiêu đề và nhập DATA của đường dẫn *@
                        <div class="form-group">

                            <input type="text" asp-for="hinh_duongdan" required="required"
                                class="form-control col-md-7 col-xs-12 parsley-error">
                            <ul class="parsley-errors-list filled" asp-for="hinh_duongdan">
                                <li class="parsley-required">This value is required.</li>
                            </ul>

                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                <label asp-for="hinh_duongdan"></label>
                                <span class="required">
                                    *
                                </span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input asp-for="hinh_duongdan" type="text" id="first-name" required="required"
                                    class="form-control col-md-7 col-xs-12">
                            </div>
                        </div>
                        @* Trường danh sách chọn dữ liệu mã địa điểm*@
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">
                                <label asp-for="dddl_id" class="control-label">Mã địa điểm du lịch</label>
                                <span class="required">*</span>
                            </label>

                            <div class="col-md-6 col-sm-6 col-xs-12">
