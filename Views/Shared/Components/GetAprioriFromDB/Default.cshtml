@model IEnumerable<LV_DuLichDienTu.Models.DichVu>
<div class="destination-slider owl-carousel ftco-animate  " style="display: block; width: 80%; margin: auto;">
    @foreach (var items in @ViewBag.list4)
    { 
        @foreach (var item in Model)
        {
            if(items == "")
            {
                <div><p>Bạn cần lựa chọn nhiều hơn để được gợi ý</p></div>
                break;
            }
            else
            {
                int checkVal = int.Parse(items);

                if (checkVal == item.dv_id)
                {
                    <div class="item">
                        <div class="destination">
                            <a asp-controller="LayoutTourism" asp-action="Details_Service" asp-route-id="@item.dv_id"
                    class="img img-2 d-flex justify-content-center align-items-center"
                    style="background-image: url('@Html.DisplayFor(modelItem => item.dv_hinh_duongdan)');object-fit: contain; ">
                                <div class="icon d-flex justify-content-center align-items-center">
                                    <span class="icon-search2"></span>
                                </div>
                            </a>
                            <div class="text p-3">
                                <div>
                                    <div class="items-center">
                                        <h3 class="title-destination"><a asp-controller="LayoutTourism" asp-action="Details_Service"
                                    asp-route-id="@item.dv_id">
                                                @Html.DisplayFor(modelItem => item.dv_ten)
                                            </a></h3>
                                    </div>
                                </div>
                                <hr>
                                <p class="bottom-area d-flex">
                                    <span><i class="icon-map-o"></i> @Html.DisplayFor(modelItem => item.dv_quanhuyen)</span>
                                    <span class="ml-auto"><a>@{@Math.Round(@item.dv_trungbinhchatluong,1)}★</a></span>
                                </p>
                            </div>
                        </div>
                    </div>
                }
            }
        }
    }